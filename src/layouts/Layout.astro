---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import Analytics from '@vercel/analytics/astro';
import WhatsAppButton from '../components/Whatsapp.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{title}</title>		
		<link
			rel="shortcut icon"
			href="/logo-morado.png"
			type="image/x-icon"
		/>

		<link rel="canonical" href="https://www.altarialights.com/">
		<meta name="robots" content="index, follow">
		<meta name="description" content="Altaria Lights es una agencia de desarrollo y automatización en Toledo, especializada en crear soluciones digitales innovadoras para impulsar tu negocio al siguiente nivel.">
		<meta name="keywords" content="Altaria Lights, Consultoria de software en Toledo, Agencia de Desarrollo, Agencia de Automatización, Desarrollo Web, Automatización de Procesos, Toledo, Soluciones Digitales,
		Desarrollo de Aplicaciones Web, Innovación Tecnológica, Servicios Digitales,
		Transformación Digital, Desarrollo de Software, Marketing Digital, Consultoría Tecnológica,
		Optimización de Negocios, Tecnología en Toledo, Servicios de Automatización,
		Desarrollo a Medida, Innovación Empresarial, Soluciones en la Nube, Integración de Sistemas,
		Optimización de Procesos, Automatizar mi Negocio, Desarrollo de Aplicaciones, Servicios IT, Agencia Digital">
		
		<meta name="author" content="Martín Camarero Benavente">
		
		<meta property="og:title" content="Altaria Lights - Agencia de Desarrollo y Automatización en Toledo" />
		<meta property="og:description" content="Altaria Lights es una agencia de desarrollo y automatización en Toledo, especializada en crear soluciones digitales innovadoras para impulsar tu negocio al siguiente nivel." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://www.altarialights.com/" />
		<meta property="og:image" content="https://www.altarialights.com/logo-morado.png" />
		<meta property="og:site_name" content="Altaria Lights" />
		<script
			src="https://unpkg.com/@dotlottie/player-component@2.7.12/dist/dotlottie-player.mjs"
			type="module"
			defer></script>
	</head>
	<body class="bg-[#050505] text-white font-['Inter',_sans-serif]">
		<div class="relative w-full overflow-x-hidden">
			<Header />
			<main>
				<slot />
			</main>
			<Footer />
			<WhatsAppButton />
		</div>
			<Analytics/>
	</body>
</html>